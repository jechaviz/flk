# Configuración de Desarrollo - Freedom Lifestyle Key
# Copia este archivo a .env y modifica según sea necesario

# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-freedom-lifestyle-key-dev-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Base de Datos
DATABASE_URL=sqlite:///db.sqlite3

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000,file://

# Zoom Configuration (para integración futura)
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret
ZOOM_MEETING_ID=your-meeting-id

# Email Configuration (para integración futura)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# API Timezone
API_TIMEZONE=America/Mexico_City

# Logging
LOG_LEVEL=INFO
